{
  "name": "postinstall",
  "version": "0.10.0",
  "description": "Deploy files from modules after npm install",
  "main": "index.js",
  "scripts": {
    "test": "mocha"
  },
  "bin": {
    "postinstall": "bin/postinstall.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kapouer/postinstall.git"
  },
  "keywords": [
    "postinstall",
    "npm",
    "deploy"
  ],
  "author": "Jérémy Lal <kapouer@melix.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kapouer/postinstall/issues"
  },
  "homepage": "https://github.com/kapouer/postinstall#readme",
  "dependencies": {
    "@danieldietrich/copy": "^0.4.2",
    "glob": "^10.3.10",
    "minimist": "^1.2.8",
    "resolve": "^1.22.8"
  },
  "devDependencies": {
    "@kapouer/eslint-config": "^2.0.0",
    "fs-extra": "^11.2.0",
    "mocha": "^10.3.0"
  },
  "mocha": {
    "spec": "test/unit.js"
  },
  "eslintConfig": {
    "extends": "@kapouer/eslint-config",
    "ignorePatterns": [
      "test/fixtures/**"
    ],
    "overrides": [
      {
        "files": [
          "index.js"
        ],
        "env": {
          "es6": true
        }
      },
      {
        "files": [
          "test/*.js"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  }
}
